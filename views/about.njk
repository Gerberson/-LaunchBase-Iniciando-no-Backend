{% extends "layout.njk" %}

{% block head %}
    <title>About - {{ about.name }}</title>
{% endblock %}

 
{% block content %}

<div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <h3>{{ about.description }}</h3>
</div>

<div id="text-line" class="links contato">
    {% for link in about.links %}
        <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
</div>

{% endblock %}